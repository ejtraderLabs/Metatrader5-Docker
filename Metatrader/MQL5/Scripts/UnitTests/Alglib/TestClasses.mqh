         for(j=0; j<nout; j++)
           {
            if((double)(j)!=(double)(xytest.Get(i,nin)))
               avgerr+=y[j];
            else
               avgerr+=(1-y[j]);
           }
        }
      avgerr=avgerr/(ntest*nout);
      if((double)(avgerr)>eps)
         return(true);
     }
//--- return result
   return(false);
  }
