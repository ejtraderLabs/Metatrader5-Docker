      else
         CRBF::RBFSetAlgoMultiQuadricAuto(s,lambdav);
      return;
     }
   if(algoidx==2)
     {
      CRBF::RBFSetAlgoBiharmonic(s,lambdav);
      return;
     }
   CAp::Assert(false,"SetXRBFAlgorithmSmoothing: unknown AlgoIdx");
  }
