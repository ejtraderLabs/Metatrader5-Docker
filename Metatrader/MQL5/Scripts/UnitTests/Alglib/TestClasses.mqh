              }
            while(v<=0.0);
            for(i=0; i<n; i++)
               xu.Mul(i,1.0/v);
            for(i=0; i<n; i++)
              {
               xlast.Set(i,0);
               x0.Set(i,2*xu[i]+0.1*CHighQualityRand::HQRndUniformR(rs));
               bndl.Set(i,0.0);
               bndu.Set(i,AL_POSINF);
