            s=vector<double>::Zeros(n);
            xlast=vector<double>::Zeros(n);
            x0=vector<double>::Zeros(n);
            xu=vector<double>::Zeros(n);
            bndl=vector<double>::Zeros(n);
            bndu=vector<double>::Zeros(n);
