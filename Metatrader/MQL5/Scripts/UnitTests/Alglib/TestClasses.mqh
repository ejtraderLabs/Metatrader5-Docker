bool CTestAblasFUnit::TestAblasF(bool silent)
  {
//--- create variables
   bool   result;
   int    maxn=100;
   double tol=10000*CMath::m_machineepsilon;
   bool   waserrors;
   bool   xdoterrors;
   bool   xseterrors;
