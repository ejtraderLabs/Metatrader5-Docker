               for(i_=aoffsi; i_<=aoffsi+n-1; i_++)
                  rv2+=refra[i_][aoffsj+i-yoffs]*rx[i_+i1_];
              }
            result=result||MathAbs(rv1-rv2)>threshold;
           }
        }
     }
//--- return result
   return(result);
