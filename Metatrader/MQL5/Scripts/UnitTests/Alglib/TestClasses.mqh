void CTestRCondUnit::RMatrixRefRCond(CMatrixDouble &a,const int n,
                                     double &rc1,double &rcinf)
  {
//--- create variables
   double nrm1a=0;
   double nrminfa=0;
   double nrm1inva=0;
   double nrminfinva=0;
   double v=0;
   int    k=0;
   int    i=0;
