                    {
                     state.m_fi.Add(0,(vshift+vpower*(vbnd-v)));
                     for(i=0; i<n; i++)
                        state.m_j.Add(0,i,- vpower*xu[i]);
                     if(linesearchstarted)
                        cntbelow++;
