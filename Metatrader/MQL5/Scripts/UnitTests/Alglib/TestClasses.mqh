         //--- search errors
         for(i=0; i<n; i++)
           {
            for(j=0; j<n; j++)
              {
               //--- orthogonality test
               vt=0.0;
               for(i_=0; i_<n; i_++)
                  vt+=a.Get(i,i_)*a.Get(j,i_);
               //--- check
               if(i==j)
                  rerr=rerr||MathAbs(vt-1)>threshold;
               else
                  rerr=rerr||MathAbs(vt)>threshold;
               //--- change value
               vt=0.0;
               for(i_=0; i_<n; i_++)
                  vt+=b.Get(i,i_)*b.Get(j,i_);
               //--- check
               if(i==j)
                  rerr=rerr||MathAbs(vt-1)>threshold;
               else
                  rerr=rerr||MathAbs(vt)>threshold;
               //--- test for difference in A and B
               if(n>=2)
