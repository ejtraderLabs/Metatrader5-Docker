   waserrors=waserrors||taill!=1.0;
   waserrors=waserrors||tailr!=0.0;
   x=vector<double>::Full(8,1.1);
   y=vector<double>::Full(8,1.1);
   CStudentTests::StudentTest2(x,n,y,n,tailb,taill,tailr);
   waserrors=waserrors||tailb!=1.0;
