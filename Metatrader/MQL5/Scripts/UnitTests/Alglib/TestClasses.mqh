           {
            a.Resize(0,0);
            windowwidth2=-1;
            nbasis2=-1;
            CSSA::SSAGetBasis(state,a,sv,windowwidth2,nbasis2);
            CAp::SetErrorFlag(errorflag,windowwidth2!=windowwidth,"testssaunit.ap:705");
