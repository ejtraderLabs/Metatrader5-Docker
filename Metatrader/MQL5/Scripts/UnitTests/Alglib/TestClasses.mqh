            v1=CHighQualityRand::HQRndNormal(rs);
            bndl.Set(i,MathMin(v0,v1));
            bndu.Set(i,MathMax(v0,v1));
            if(c[i]>0.0)
               bndu.Set(i,AL_POSINF);
            if(c[i]<0.0)
               bndl.Set(i,AL_NEGINF);
           }
         ShiftFromZero(c,n,0.01);
         CMinLP::MinLPCreate(n,state);
         SelectSolver(state,solvertype);
