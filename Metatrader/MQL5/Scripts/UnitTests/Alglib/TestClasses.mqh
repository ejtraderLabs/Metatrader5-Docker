         for(i=0; i<n; i++)
           {
            c.Set(i,CHighQualityRand::HQRndNormal(rs));
            bndl.Set(i,CHighQualityRand::HQRndNormal(rs));
            bndu.Set(i,bndl[i]+CHighQualityRand::HQRndUniformI(rs,3));
