bool CTestMLPEUnit::TestMLPZeroWeights(void)
  {
//--- create variables
   CMLPTrainer trainer;
   CMultilayerPerceptron net;
   CMLPReportShell rep;
   int    nin=0;
   int    nout=0;
   int    wcount=0;
   int    mxnin=0;
   int    mxnout=0;
