class CTestFFTUnit
  {
public:
   static bool       TestFFT(const bool silent);

private:
   static void       RefFFTC1D(complex &a[],const int n);
   static void       RefFFTC1DInv(complex &a[],const int n);
   static void       RefInternalCFFT(double &a[],const int nn,const bool inversefft);
