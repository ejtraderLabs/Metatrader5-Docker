              }
           }
         //--- change values
         for(i=0; i<n; i++)
           {
            for(j=0; j<n; j++)
              {
               r2.Set(i,j,2*CMath::RandomReal()-1);
               r2.Set(i+n,j,r2.Get(i,j));
