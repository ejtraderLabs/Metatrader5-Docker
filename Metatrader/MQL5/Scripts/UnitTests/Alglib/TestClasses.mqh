   static bool       TestMLPZeroWeights(void);
   static bool       TestMLPRestarts(void);
   static bool       TestMLPTrainEns(void);
   static bool       TestMLPTrainEnsRegr(void);
   static bool       TestMLPTrainEnsCls(void);
  };
