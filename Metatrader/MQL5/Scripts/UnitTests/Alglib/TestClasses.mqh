         a=matrix<double>::Zeros(n,n);
         for(i=0; i<n; i++)
            for(j=0; j<n; j++)
               a.Set(i,j,CHighQualityRand::HQRndNormal(rs));
         //--- Create and try to solve
         CMinNLC::MinNLCCreate(n,x0,state);
