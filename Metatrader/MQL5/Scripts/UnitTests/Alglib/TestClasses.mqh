//--- check
   if(distvals)
     {
      //--- Distinct eigenvalues,test vectors
      for(j=0; j<m; j++)
        {
         //--- change value
         v=0.0;
         for(i_=0; i_<n; i_++)
            v+=z.Get(i_,j)*zref[i_][i1+j];
         //--- check
         if(v<0.0)
           {
