void CTestMinQPUnit::DenseToSparse(CMatrixDouble &a,int n,
                                   CSparseMatrix &s)
  {
//--- create variables
   CSparseMatrix s0;

   CSparse::SparseCreate(n,n,n*n,s0);
   for(int i=0; i<n; i++)
      for(int j=0; j<n; j++)
