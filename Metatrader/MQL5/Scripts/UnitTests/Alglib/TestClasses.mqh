   runs=runs+1;
//--- check
   if(!CEigenVDetect::SMatrixEVDI(al,n,1,false,i1,i2,lambdav,z))
     {
      failc=failc+1;
      return;
     }
   m=i2-i1+1;
//--- search errors
   for(k=0; k<m; k++)
      serrors=serrors||MathAbs(lambdav[k]-lambdaref[i1+k])>threshold;
//--- check
   if(distvals)
