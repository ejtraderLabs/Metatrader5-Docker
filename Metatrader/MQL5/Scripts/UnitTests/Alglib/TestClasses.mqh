         CAp::SetErrorFlag(err,rep.m_terminationtype<=0,"testminlpunit.ap:135");
         CAp::SetErrorFlag(err,CAp::Len(x)<n,"testminlpunit.ap:136");
         if(err)
            return;
         for(i=0; i<n; i++)
           {
