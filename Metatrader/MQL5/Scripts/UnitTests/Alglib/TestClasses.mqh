   RMatrixMakeACopy(a,n,n,inva);
//--- check
   if(!RMatrixInvMat(inva,n))
     {
      rc1=0;
      rcinf=0;
      //--- exit the function
      return;
     }
//--- norm A
   nrm1a=0;
   nrminfa=0;
//--- calculation
   for(k=0; k<n; k++)
     {
      //--- change values
      v=0;
      for(i=0; i<n; i++)
         v+=MathAbs(a[i][k]);
      nrm1a=MathMax(nrm1a,v);
      v=0;
      for(i=0; i<n; i++)
         v+=MathAbs(a[k][i]);
      nrminfa=MathMax(nrminfa,v);
     }
//--- norm inv A
   nrm1inva=0;
   nrminfinva=0;
//--- calculation
   for(k=0; k<n; k++)
     {
      //--- change values
      v=0;
      for(i=0; i<n; i++)
         v+=MathAbs(inva[i][k]);
      nrm1inva=MathMax(nrm1inva,v);
      v=0;
      for(i=0; i<n; i++)
         v+=MathAbs(inva[k][i]);
      nrminfinva=MathMax(nrminfinva,v);
     }
