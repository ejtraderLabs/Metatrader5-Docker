   waserrors=waserrors||tailb!=0.0;
   waserrors=waserrors||taill!=0.0;
   waserrors=waserrors||tailr!=1.0;
   CStudentTests::StudentTest2(x,1,y,n,tailb,taill,tailr);
   waserrors=waserrors||tailb!=0.0;
   waserrors=waserrors||taill!=0.0;
   waserrors=waserrors||tailr!=1.0;
