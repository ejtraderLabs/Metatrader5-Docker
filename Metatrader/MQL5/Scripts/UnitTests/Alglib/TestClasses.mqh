         if(CHighQualityRand::HQRndUniformR(rs)>skipprob)
           {
            datalen=windowwidth+CHighQualityRand::HQRndUniformI(rs,10);
            forecastlen=1+CHighQualityRand::HQRndUniformI(rs,10);
            x=vector<double>::Zeros(datalen);
