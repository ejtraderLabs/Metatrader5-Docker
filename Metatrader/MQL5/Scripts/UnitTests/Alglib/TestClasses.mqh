void CTestAblasFUnit::RefGerX(int m,int n,CMatrixDouble &a,int ia,
                              int ja,double alpha,
                              CRowDouble &u,int iu,
                              CRowDouble &v,int iv)
  {
   double s=0;

   if((m<=0 || n<=0) || alpha==0.0)
      return;

   for(int i=0; i<m; i++)
     {
      s=alpha*u[iu+i];
      for(int j=0; j<n; j++)
         a.Add(ia+i,ja+j,s*v[iv+j]);
     }
  }
