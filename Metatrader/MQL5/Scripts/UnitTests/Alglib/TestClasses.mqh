//+------------------------------------------------------------------+
void CTestAblasFUnit::RefTrsVX(int n,CMatrixDouble &a,int ia,int ja,
                               bool isupper,bool isunit,int optype,
                               CRowDouble &x,int ix)
  {
//--- create variables
   int    i=0;
   int    j=0;
   double v=0;
//--- Quick exit
   if(n<=0)
      return;
//--- Generic code
   if(optype==0 && isupper)
     {
      for(i=n-1; i>=0; i--)
        {
         v=x[ix+i];
         for(j=i+1; j<n; j++)
            v-=a.Get(ia+i,ja+j)*x[ix+j];
         if(!isunit)
            v/=a.Get(ia+i,ja+i);
         x.Set(ix+i,v);
        }
      return;
     }

   if(optype==0 && !isupper)
     {
      for(i=0; i<n; i++)
        {
         v=x[ix+i];
         for(j=0; j<i; j++)
            v-=a.Get(ia+i,ja+j)*x[ix+j];
         if(!isunit)
            v/=a.Get(ia+i,ja+i);
         x.Set(ix+i,v);
        }
      return;
     }

   if(optype==1 && isupper)
     {
      for(i=0; i<n; i++)
        {
         v=x[ix+i];
         if(!isunit)
            v/=a.Get(ia+i,ja+i);
         x.Set(ix+i,v);
         if(v==0)
            continue;
         for(j=i+1; j<n; j++)
            x.Add(ix+j,- v*a.Get(ia+i,ja+j));
        }
      return;
     }

   if(optype==1 && !isupper)
     {
      for(i=n-1; i>=0; i--)
        {
         v=x[ix+i];
         if(!isunit)
            v/=a.Get(ia+i,ja+i);
         x.Set(ix+i,v);
         if(v==0)
            continue;
         for(j=0; j<i; j++)
            x.Add(ix+j,- v*a.Get(ia+i,ja+j));
        }
      return;
     }
//--- check
   CAp::Assert(false,"RMatrixTRSV: unexpected operation type");
  }
