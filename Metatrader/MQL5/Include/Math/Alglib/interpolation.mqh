      //--- calculation
      for(int i=1; i<n; i++)
         p[i]=p[i-1]+CApServ::SafePythag3(xy[i][0]-xy[i-1][0],xy[i][1]-xy[i-1][1],xy[i][2]-xy[i-1][2]);
     }
//--- check
   if(pt==2)
     {
