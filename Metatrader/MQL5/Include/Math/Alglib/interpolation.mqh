   //--- constructor / destructor
                     CRBFCalcBuffer(void) { m_modelversion=0; }
                    ~CRBFCalcBuffer(void) {}
   //---
   void              Copy(const CRBFCalcBuffer&obj);
   //--- overloading
   void              operator=(const CRBFCalcBuffer&obj) { Copy(obj); }
  };
