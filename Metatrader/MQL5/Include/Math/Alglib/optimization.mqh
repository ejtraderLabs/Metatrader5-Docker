      return;
//--- copy
   State.m_xbase=x;
   State.m_xbase.Resize(State.m_n);
//--- allocation
   State.m_rstate.ia.Resize(5);
   ArrayResizeAL(State.m_rstate.ba,1);
   State.m_rstate.ra.Resize(4);
   State.m_rstate.stage=-1;
