      CAp::Trace(StringFormat("*** | * dF/dX Lipschitz const:  %10.2E                |\n",monitor.m_rep.m_nonc1lipschitzc));
      CAp::Trace("*** | Printing out log of suspicious line search XK+Stp*D |\n");
      CAp::Trace("*** | Look for abrupt changes in slope.                   |\n");
