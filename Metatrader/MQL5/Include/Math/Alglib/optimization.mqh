class CLPQPPresolve
  {
public:
   static void       PresolveNoneScaleUser(CRowDouble &s,CRowDouble &c,CRowDouble &bndl,CRowDouble &bndu,int n,CSparseMatrix &sparsea,CRowDouble &al,CRowDouble &au,int k,CPresolveInfo &Info);
