                                             int &dc[],const int k,
                                             const int m,int &info,
                                             CBarycentricInterpolantShell &b,
                                             CBarycentricFitReportShell &rep)
  {
//--- initialization
   info=0;
//--- function call
   CLSFit::BarycentricFitFloaterHormannWC(x,y,w,n,xc,yc,dc,k,m,info,b.GetInnerObj(),rep.GetInnerObj());
  }
